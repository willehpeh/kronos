  script(src="/libs/bootstrap/dist/js/bootstrap.min.js")
  script(src="/libs/a0-angular-storage/dist/angular-storage.js")
  script(src="/libs/angular-ui-router/release/angular-ui-router.min.js")
  script(src="/libs/angular-bootstrap/ui-bootstrap.min.js")
  script(src="/libs/angular-bootstrap/ui-bootstrap-tpls.min.js")
  script(src="/libs/angular-touch/angular-touch.min.js")
  script(src="/libs/ng-file-upload/ng-file-upload-all.min.js")
  script(src="/libs/ng-file-upload/ng-file-upload-shim.min.js")
  script(src="/javascripts/app.js")
  script(src="/javascripts/services/errorInterceptor.js")
  script(src="/javascripts/services/service-bundle.js")
  script(src="/javascripts/controllers/DashboardCtrl.js")
  script(src="/javascripts/controllers/ModifyWatchModalCtrl.js")
  script(src="/javascripts/controllers/WatchModalCtrl.js")

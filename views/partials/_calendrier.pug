h2 Calendrier
button.btn.btn-success(ng-click="openCalendarModal()") Nouvel événement
br
br
div.calendarelement(ng-repeat="element in calendarElementArray | orderBy: '-created_at'" ng-class-even="'even'" ng-class-odd="'odd'")
  h3 {{element.title}}
    small {{element.time}} le {{element.day}} {{element.month}} {{element.year}}
  span {{element.text}}
  br
  br
  .edit-buttons
    span.fa.fa-2x.fa-edit(ng-click="modifyCalendarModal(element._id)")
    span.fa.fa-2x.fa-close(ng-click="deleteCalendarModal(element._id)")

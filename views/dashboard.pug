html(ng-app='KronosDashboard')
  head
    meta(charset="utf-8")
    meta(name="viewport",content="width=device-width")
    link(rel="stylesheet" href="/libs/bootstrap/dist/css/bootstrap.min.css")
    link(rel="stylesheet" href="/libs/font-awesome/css/font-awesome.min.css")
    link(rel="stylesheet" href="/stylesheets/main.min.css")
    script(src="//use.edgefonts.net/quicksand.js")
  body(ng-controller="DashboardCtrl")
    h1 Dashboard
    ul.nav.nav-tabs#dashboard-tabs
      li(role="presentation" class="active")
        a(href="#montres") Montres
      li(role="presentation")
        a(href="#news") News
      li(role="presentation")
        a(href="#calendrier") Calendrier
      li(role="presentation")
        a(href="#presse") Presse
      li(role="presentation")
        a(href="#ambassadeurs") Ambassadeurs
    .tab-content
      .tab-pane.active#montres(role="tabpanel")
        include ./partials/_watches.pug
      .tab-pane#news(role="tabpanel")
        include ./partials/_news.pug
      .tab-pane#calendrier(role="tabpanel")
        include ./partials/_calendrier.pug
      .tab-pane#presse(role="tabpanel")
        include ./partials/_presse.pug
      .tab-pane#ambassadeurs(role="tabpanel")
        include ./partials/_ambassadeurs.pug

    script(src="/libs/jquery/dist/jquery.min.js")
    script(src="/libs/angular/angular.min.js")
    script(src="/libs/angular-route/angular-route.min.js")
    script(src="/libs/angular-animate/angular-animate.min.js")
    script(src="/libs/bootstrap/dist/js/bootstrap.min.js")
    script(src="/libs/a0-angular-storage/dist/angular-storage.js")
    script(src="/libs/angular-ui-router/release/angular-ui-router.min.js")
    script(src="/libs/angular-bootstrap/ui-bootstrap.min.js")
    script(src="/libs/angular-bootstrap/ui-bootstrap-tpls.min.js")
    script(src="/libs/angular-touch/angular-touch.min.js")
    script(src="/javascripts/app.js")
    script(src="/javascripts/functions.js")
    script(src="/javascripts/services/errorInterceptor.js")
    script(src="/javascripts/services/service-bundle.js")
    script(src="/javascripts/controllers/DashboardCtrl.js")
    script(src="/javascripts/controllers/ModifyWatchModalCtrl.js")
    script(src="/javascripts/controllers/WatchModalCtrl.js")
    script(src="/javascripts/controllers/DeleteWatchCtrl.js")
    script(src="/javascripts/controllers/NewsModalCtrl.js")
    script(src="/javascripts/controllers/ModifyNewsModalCtrl.js")
    script(src="/javascripts/controllers/DeleteNewsCtrl.js")
